generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Site {
  id        String     @id @default(cuid())
  name      String
  domain    String
  slug      String
  reports   QAReport[]
  users     User[]     @relation("SiteMembers") // ⬅️ relation name
  createdAt DateTime   @default(now())
}

model QAReport {
  id         String    @id @default(cuid())
  slug       String
  url        String
  site       String? // ✅ NEW: extracted domain like example.com
  siteName   String?
  comment    String
  x          Int
  y          Int
  imagePath  String
  timestamp  DateTime  @default(now())
  status     String    @default("new") // NEW: 'new', 'in_progress', 'resolved'
  priority   String    @default("not_assigned") // Not Assigned, Low, Medium, High
  resolvedAt DateTime? // NEW: resolution timestamp
  duration   Int? // NEW: resolution duration in minutes
  userName   String

  archived   Boolean   @default(false)
  archivedAt DateTime?

  userId     String?
  user       User?        @relation(fields: [userId], references: [id])
  Comment    Comment[]
  Attachment Attachment[]
  Site       Site?        @relation(fields: [siteId], references: [id])
  siteId     String?

  @@unique([siteId, slug])
}

model User {
  id            String       @id @default(cuid())
  name          String?
  email         String       @unique
  emailVerified DateTime?
  image         String?
  password      String
  accounts      Account[]
  sessions      Session[]
  qaReports     QAReport[]
  comments      Comment[]
  attachments   Attachment[]
  createdAt     DateTime     @default(now())
  sites         Site[]       @relation("SiteMembers") // ⬅️ same relation name
}

model Comment {
  id          String       @id @default(cuid())
  content     String
  reportId    String
  report      QAReport     @relation(fields: [reportId], references: [id], onDelete: Cascade)
  userId      String? // optional
  user        User?        @relation(fields: [userId], references: [id]) // optional relation
  attachments Attachment[]

  createdAt DateTime @default(now())
}

model Attachment {
  id        String  @id @default(cuid())
  url       String
  commentId String
  comment   Comment @relation(fields: [commentId], references: [id])

  createdAt  DateTime  @default(now())
  QAReport   QAReport? @relation(fields: [qAReportId], references: [id])
  qAReportId String?
  User       User?     @relation(fields: [userId], references: [id])
  userId     String?
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
