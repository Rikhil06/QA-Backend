generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Site {
  id        String     @id @default(cuid())
  name      String
  domain    String
  slug      String
  reports   QAReport[]
  users     User[]     @relation("SiteMembers") // ‚¨ÖÔ∏è relation name
  createdAt DateTime   @default(now())
}

model QAReport {
  id         String    @id @default(cuid())
  slug       String
  url        String
  site       String? // ‚úÖ NEW: extracted domain like example.com
  siteName   String?
  title      String
  comment    String
  x          Int
  y          Int
  imagePath  String
  timestamp  DateTime  @default(now())
  status     String    @default("new") // NEW: 'new', 'in_progress', 'resolved'
  priority   String // Not Assigned, Low, Medium, High
  type       String
  resolvedAt DateTime? // NEW: resolution timestamp
  duration   Int? // NEW: resolution duration in minutes
  userName   String

  archived   Boolean   @default(false)
  archivedAt DateTime?

  userId     String?
  user       User?        @relation(fields: [userId], references: [id])
  Comment    Comment[]
  Attachment Attachment[]
  Site       Site?        @relation(fields: [siteId], references: [id])
  siteId     String?
  activities Activity[]

  @@unique([siteId, slug])
}

model User {
  id                  String       @id @default(cuid())
  name                String?
  email               String       @unique
  emailVerified       DateTime?
  image               String?
  password            String
  accounts            Account[]
  sessions            Session[]
  qaReports           QAReport[]
  comments            Comment[]
  attachments         Attachment[]
  createdAt           DateTime     @default(now())
  sites               Site[]       @relation("SiteMembers") // ‚¨ÖÔ∏è same relation name
  activities          Activity[]   @relation("activities") // activities **for this user**
  performedActivities Activity[]   @relation("performedActivities") // activities **by this user**
}

model Activity {
  id        String   @id @default(cuid())
  userId    String // The user the activity is for
  actorId   String // Who performed the action
  type      String // e.g., comment, status, assignment, completed, created
  reportId  String? // Optional, link to task
  message   String
  status    String? // Optional, e.g., "to QA" for status changes
  createdAt DateTime @default(now())
  priority  String?

  user   User      @relation("activities", fields: [userId], references: [id])
  actor  User      @relation("performedActivities", fields: [actorId], references: [id])
  report QAReport? @relation(fields: [reportId], references: [id])
}

model Comment {
  id          String       @id @default(cuid())
  content     String
  reportId    String
  report      QAReport     @relation(fields: [reportId], references: [id], onDelete: Cascade)
  userId      String? // optional
  user        User?        @relation(fields: [userId], references: [id]) // optional relation
  attachments Attachment[]
  parentId    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // üëá SELF RELATION (this is what creates `replies`)
  parent  Comment?  @relation("CommentReplies", fields: [parentId], references: [id], onDelete: Cascade)
  replies Comment[] @relation("CommentReplies")
}

model Attachment {
  id           String  @id @default(cuid())
  key          String
  thumbnailKey String?
  name         String
  size         Int
  type         String
  commentId    String
  comment      Comment @relation(fields: [commentId], references: [id], onDelete: Cascade)

  createdAt  DateTime  @default(now())
  QAReport   QAReport? @relation(fields: [qAReportId], references: [id])
  qAReportId String?
  User       User?     @relation(fields: [userId], references: [id])
  userId     String?
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
